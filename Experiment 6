Experiment 6 a:

#include <stdio.h>
int main() {
    int n, i, max_index = 0;
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter %d integers:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    int max = arr[0];
    for(i = 1; i < n; i++) {
        if(arr[i] > max) {
            max = arr[i];
            max_index = i;
        }
    }
    printf("Maximum element is %d at index %d\n", max, max_index);
    return 0;
}

Experiment 6 b:

#include <stdio.h>
int main() {
    int arr[] = {5, 6, 1, 3, 4, 2};
    int n = sizeof(arr) / sizeof(arr[0]);
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
    printf("Sorted array: ");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    return 0;
}


Experiment 6 c:

#include <stdio.h>
int main() {
    int arr[] = {10, 20, 30, 40, 50};
    int n = sizeof(arr) / sizeof(arr[0]);
    int target, i, found = 0;
    printf("Enter the element to search: ");
    scanf("%d", &target);
    for(i = 0; i < n; i++) {
        if(arr[i] == target) {
            printf("Element %d found at index %d\n", target, i);
            found = 1;
            break;
        }
    }
    if(!found) {
        printf("Element %d not found in the array\n", target);
    }
    return 0;
}
