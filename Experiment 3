#include <stdio.h>
int main() {
    int num;
    printf("Enter an integer: ");
    scanf("%d", &num);

    if (num % 2 == 0) {
        printf("%d is even.\n", num);
    } else {
        printf("%d is odd.\n", num);
    }
    return 0;
}


#include <stdio.h>
int main() {
    char ch;
    printf("Enter an alphabet: ");
    scanf("%c", &ch);
    if (ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U' ||
        ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
        printf("%c is a vowel.\n", ch);
    } else {
        printf("%c is a consonant.\n", ch);
    }

    return 0;
}


#include <stdio.h>
#define PI 3.14159

int main() {
    int choice;
    double radius, side, length, width;

    printf("1. Circle\n2. Square\n3. Rectangle\n");
    printf("Choose shape (1 - 3): ");
    scanf("%d", &choice);

    if (choice == 1) {
        printf("Enter radius: ");
        scanf("%lf", &radius);
        printf("Area = %.2lf\n", PI * radius * radius);
        printf("Perimeter = %.2lf\n", 2 * PI * radius);
    }
    else if (choice == 2) {
        printf("Enter side: ");
        scanf("%lf", &side);
        printf("Area = %.2lf\n", side * side);
        printf("Perimeter = %.2lf\n", 4 * side);
    }
    else if (choice == 3) {
        printf("Enter length: ");
        scanf("%lf", &length);
        printf("Enter width: ");
        scanf("%lf", &width);
        printf("Area = %.2lf\n", length * width);
        printf("Perimeter = %.2lf\n", 2 * (length + width));
    }
    else {
        printf("Invalid choice.\n");
    } return 0;
}
